<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.edu.dao.NoticeMapper">

	<!-- 전체 목록 조회 -->
	<select id="findAllNotice"
		resultType="com.ssafy.edu.dto.NoticeDto">
		select * 
		from notice 
		order by idx
	</select>
	
	<!-- 제목으로 검색 -->	
	<select id="findNoticeByTitle"
		resultType="com.ssafy.edu.dto.NoticeDto">
		select *
		from notice
		where title LIKE CONCAT('%',#{title},'%') 
		order by idx 
	</select>
	
	<!-- 회원 이름으로 검색 -->	
	<select id="findNoticeByUsername"
		resultType="com.ssafy.edu.dto.NoticeDto">
		select *
		from notice
		where username LIKE CONCAT('%',#{username},'%') 
		order by idx 
	</select>
	
	<!-- idx으로 검색 -->	
	<select id="findNoticeByIdx"
		resultType="com.ssafy.edu.dto.NoticeDto">
		select *
		from notice
		WHERE idx=#{idx}
	</select>
	
	<!-- 전체 공지사항 수 -->
	<select id="getNoticesTotal" resultType="java.lang.Integer">
		select count(*)
		from notice
	</select>

	<!-- 공지사항 등록 -->
	<insert id="addNotice"
		parameterType="com.ssafy.edu.dto.NoticeDto">
		INSERT INTO notice
		(username, title, content, date)
		VALUES(
		#{username},#{title},#{content},now())
	</insert>

	<!-- 공지사항 수정 -->
	<update id="updateNotice"
		parameterType="com.ssafy.edu.dto.NoticeDto">
		UPDATE notice 
		SET username=#{username}, title=#{title} , content=#{content}, date=now()
		WHERE idx=#{idx}
	</update>

	<!-- 공지사항 삭제 -->
	<delete id="deleteNotice">
		DELETE FROM notice
		WHERE idx=#{idx}
	</delete>

</mapper>